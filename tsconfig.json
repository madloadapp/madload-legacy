{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "server",
    "outDir": "lib",
    "lib": ["ESNext"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "tmp", "lib", "client"]
}
